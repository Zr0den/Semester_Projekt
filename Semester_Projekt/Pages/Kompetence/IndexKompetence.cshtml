@using Semester_Projekt.Pages.Ansat
@model Semester_Projekt.Pages.Kompetence.IndexModel
@{
}
<form method="post">
    <input type="hidden" asp-for="AnsatIndexViewModel.AnsatID" class="form-control" />
    <table class="table"´>
        <thead>
        <tr>
            <th>KompetenceNavn</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @if (Model.KompetenceIndexViewModel.Any())
        {
            foreach (var kompetence in Model.KompetenceIndexViewModel)
            {
                <tr>
                    <td>@kompetence.KompetenceName</td>
                    <td>
                        <a asp-page="./EditKompetence" asp-route-kompetenceId="@kompetence.KompetenceID">Edit</a>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
    <a asp-page="CreateKompetence">Create New</a>
