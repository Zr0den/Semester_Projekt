@page
@model Semester_Projekt.Pages.Projekt.EditProjektModel
@{
}
<h2>Rediger Projekt</h2>
<article class="row">
    <form method="post">
        <input type="hidden" asp-for="ProjektModel.ProjektID" class="form-control" />

        <section class="form-group">
            <label asp-for="ProjektModel.ProjektName"></label>
            <input asp-for="ProjektModel.ProjektName" class="form-control"/>
            <span asp-validation-for="ProjektModel.ProjektName" class="text-danger"></span>
        </section>
        <button type="submit" class="btn btn-default">Rediger Projekt</button>
    </form>
</article>