@page
@model Semester_Projekt.Pages.Opgave.CreateOpgaveModel
@{
}
<h2>Opret Projekt</h2>
<article class="row">
    <form method="post">

        <section class="form-group">
            <label asp-for="OpgaveModel.OpgaveName"></label>
            <input asp-for="OpgaveModel.OpgaveName" class="form-control"/>
            <span asp-validation-for="OpgaveModel.OpgaveName" class="text-danger"></span>
        </section>
        <section class="form-group">
            <select asp-for="OpgaveModel.OpgaveType" class="form-control" autocomplete="role" aria-required="true">
                <option value="Tekniker">Tekniker</option>
                <option value="Konverter">Konverter</option>
                <option value="Konsulent">Konsulent</option>
                <label asp-for="OpgaveModel.OpgaveType"></label>
                <span asp-validation-for="OpgaveModel.OpgaveType" class="text-danger"></span>
            </select>
        </section>
        <select name = "kompetence">
            @if (Model.KompetenceModel.Any())
            {
                foreach (var kompetence in Model.KompetenceModel)
                {
                    <tr>
                        <option value="@kompetence.KompetenceID">@kompetence.KompetenceName</option>
                    </tr>
                }
            }

        </select>

        <button type="submit" class="btn btn-default">Opret Opgave</button>
    </form>
</article>