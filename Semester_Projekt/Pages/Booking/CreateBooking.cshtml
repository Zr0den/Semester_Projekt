@page
@model Semester_Projekt.Pages.Booking.CreateBookingModel
@{
}
<h2>Opret booking</h2>
<article class="row">
    <form method="post">
        <section class="form-group">
            <label asp-for="BookingProjektID"></label>
            <input asp-for="BookingProjektID" class="form-control"/>
            <span asp-validation-for="BookingProjektID" class="text-danger"></span>
        </section>
        <section class="form-group">
            <label asp-for="BookingModel.BookingName"></label>
            <input asp-for="BookingModel.BookingName" class="form-control"/>
            <span asp-validation-for="BookingModel.BookingName" class="text-danger"></span>
        </section>
        <section class="form-group">
            <label asp-for="BookingModel.StartDato"></label>
            <input asp-for="BookingModel.StartDato" class="form-control"/>
            <span asp-validation-for="BookingModel.StartDato" class="text-danger"></span>
        </section>
        <section class="form-group">
            <label asp-for="BookingModel.SlutDato"></label>
            <input asp-for="BookingModel.SlutDato" class="form-control"/>
            <span asp-validation-for="BookingModel.SlutDato" class="text-danger"></span>
        </section>
        
            <section>
            <table class="table"´>
                <thead>
                <tr>
                    <th>Tilføj</th>
                    <th>Ansat</th>
                    <th>Kompetenceområde</th>
                </tr>
                </thead>
                <tbody>
                @if (Model.AnsatIndexViewModel.Any())
                {
                    foreach (var ansat in Model.AnsatIndexViewModel)
                    {
                        <tr>
                            <td><input type="radio" id="@ansat.AnsatID" name="BookingAnsatID" value="@ansat.AnsatID"></td>
                            <td><label for="@ansat.AnsatID">@ansat.AnsatName</label><br></td>
                            <td><label for="@ansat.AnsatID">@ansat.AnsatType</label><br></td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </section>
        <button type="submit" class="btn btn-default">Opret Booking</button>
    </form>
</article>