@page
@model Semester_Projekt.Pages.Ansat.EditModel
@{
}
<h2>Update Ansat Profil</h2>
<article class="row">
    <form method="post">
        <input type="hidden" asp-for="AnsatModel.AnsatID" class="form-control" />

        <section class="form-group">
            <label asp-for="AnsatModel.AnsatName"></label>
            <input asp-for="AnsatModel.AnsatName" class="form-control"/>
            <span asp-validation-for="AnsatModel.AnsatName" class="text-danger"></span>
        </section>
        <section class="form-group">
            <label asp-for="AnsatModel.AnsatTelefon"></label>
            <input asp-for="AnsatModel.AnsatTelefon" class="form-control"/>
            <span asp-validation-for="AnsatModel.AnsatTelefon" class="text-danger"></span>
        </section>
        <section class="form-group">
            <label asp-for="AnsatModel.AnsatType"></label>
            <input asp-for="AnsatModel.AnsatType" class="form-control"/>
            <span asp-validation-for="AnsatModel.AnsatType" class="text-danger"></span>
        </section>
        <section>
            <table class="table"´>
                <thead>
                <tr>
                    <th>Tilføj</th>
                    <th>KompetenceNavn</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @if (Model.KompetenceIndexViewModel.Any())
                {
                    foreach (var kompetence in Model.KompetenceIndexViewModel)
                    {
                        <tr>
                            <td><input type="checkbox" name="Kompetence" value="@kompetence.KompetenceID"/></td>
                            <td>@kompetence.KompetenceName</td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </section>
        <button type="submit" class="btn btn-default">Update Ansat</button>
    </form>
</article>