@page
@model Semester_Projekt.Pages.Ansat.IndexModel
@{
}
<form method="post">
    <table class="table"´>
        <thead>
        <tr>
            <th>AnsatID</th>
            <th>Navn</th>
            <th>Telefon</th>
            <th>Type</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @if(Model.AnsatIndexViewModel.Any())
        {
            foreach (var ansat in Model.AnsatIndexViewModel)
            {
                <tr>
                    <td>@ansat.AnsatID</td>
                    <td>@ansat.AnsatName</td>
                    <td>@ansat.AnsatTelefon</td>
                    <td>@ansat.AnsatType</td>
                    <td>
                        <a asp-page="./EditAnsat" asp-route-id="@ansat.AnsatID">Edit</a>
                        <button type="button" asp-page-handler="delete" asp-route-id="@ansat.AnsatID">Delete</button>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
    <a asp-page="CreateAnsat">Create New</a>
</form>